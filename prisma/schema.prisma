generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  savedNames SavedName[]

  @@map("users")
}

model SavedName {
  id          String   @id @default(cuid())
  userId      String
  firstName   String
  lastName    String
  fullName    String
  origin      String?  // e.g., "Greek", "Latin", "Hebrew"
  feedback    String?  // The AI feedback about the name
  middleNames String[] // Array of suggested middle names
  similarNames String[] // Array of similar names
  savedAt     DateTime @default(now())
  
  // Create a unique constraint for quick lookups with explicit name
  @@unique([userId, firstName, lastName], name: "userId_firstName_lastName")
  
  // Index for faster queries
  @@index([userId, savedAt])
  @@index([userId, firstName, lastName])

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("saved_names")
}
